{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile debug RT in one weekend",
            "command": "cmake",
            "type": "shell",
            "args": ["--build", "."],
            "options": {
                "cwd": "${workspaceFolder}/RT_in_one_weekend/build/"
            }
        },
        {
            "label": "Compile release RT in one weekend",
            "command": "cmake",
            "type": "shell",
            "args": ["--build", ".", "--config", "Release"],
            "options": {
                "cwd": "${workspaceFolder}/RT_in_one_weekend/build/"
            }
        },
    ]
}